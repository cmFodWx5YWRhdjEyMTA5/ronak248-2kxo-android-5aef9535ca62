<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.screamxo.Fragment.SellItemThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="PRODUCT PRICING"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/pricingtext"
            android:textColor="@color/colordarkGray"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <com.aldoapps.autoformatedittext.AutoFormatEditText
            android:id="@+id/ed_item_price"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="Item Price"
            android:inputType="numberDecimal"
            android:textColorHint="@color/colordarkGray"
            android:textSize="@dimen/_11sdp"
            app:isDecimal="true" />

        <com.aldoapps.autoformatedittext.AutoFormatEditText
            android:id="@+id/ed_item_earn"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:clickable="false"
            android:cursorVisible="false"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="You will Earn"
            android:inputType="numberDecimal"
            android:textColorHint="@color/colordarkGray"
            android:textSize="@dimen/_11sdp"
            app:isDecimal="true" />

        <ImageView
            android:id="@+id/imgQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@mipmap/ico_question"
            android:visibility="gone" />

        <com.aldoapps.autoformatedittext.AutoFormatEditText
            android:id="@+id/ed_item_Shipping"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Item Shipping Cost"
            android:inputType="numberDecimal"
            android:text="$0"
            android:textColorHint="@color/colordarkGray"
            android:textSize="@dimen/_11sdp"
            app:isDecimal="true" />

        <EditText
            android:id="@+id/ed_item_Keywords"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:hint="Seperate Keywords With a Comma."
            android:inputType="text"
            android:textColorHint="@color/colordarkGray"
            android:textSize="@dimen/_11sdp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@color/colorRed"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</FrameLayout>
