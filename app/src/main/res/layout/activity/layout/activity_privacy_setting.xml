<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.screamxo.Activity.RahulWork.PrivacySettingActivity">

    <include layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/txt_Private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:drawablePadding="@dimen/_10sdp"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/drawable_gray_gradient"
        android:text="@string/txt_entire_account_private"
        android:textColor="@color/colorRed"
        android:textStyle="bold"
        fontPath="fonts/Poppins-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:textSize="@dimen/_11sdp" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_Private"
        android:background="@color/colordddddd"/>

    <ToggleButton
        android:id="@+id/tb_Private"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/toggle_selector"
        android:textColor="@color/colordarkGray"
        android:textOff=""
        android:textOn=""
        android:textSize="@dimen/_11sdp" />

    <TextView
        android:id="@+id/txt_notification_Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line1"
        android:padding="@dimen/_20sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:text="@string/txt_tag_top_MEDIA"
        android:background="@color/colorf7f7f7"
        android:textColor="@color/colordarkGray"
        fontPath="fonts/Poppins-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:textStyle="bold"
        android:textSize="@dimen/_11sdp" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_notification_Contact"
        android:background="@color/colordddddd"/>


    <TextView
        android:id="@+id/txtMediaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_notification_Contact"
        android:layout_alignEnd="@+id/tb_Private"
        android:layout_alignRight="@+id/tb_Private"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_chevron_right_red"
        android:text="Public"
        fontPath="fonts/Poppins-Medium.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_11sdp" />


    <TextView
        android:id="@+id/txt_notification_Stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line2"
        android:padding="@dimen/_20sdp"
        android:background="@color/colorf7f7f7"
        android:drawablePadding="@dimen/_10sdp"
        android:text="@string/txt_tag_bottom_stream"
        fontPath="fonts/Poppins-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/colordarkGray"
        android:textStyle="bold"
        android:textSize="@dimen/_11sdp" />


    <TextView
        android:id="@+id/txtStreamData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_notification_Stream"
        android:layout_alignEnd="@+id/tb_Private"
        android:layout_alignRight="@+id/tb_Private"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        fontPath="fonts/Poppins-Medium.ttf"
        tools:ignore="MissingPrefix"
        android:drawableRight="@drawable/ic_chevron_right_red"
        android:text="Public"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_11sdp" />

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colordddddd"
        android:layout_below="@+id/txt_notification_Stream"/>


    <TextView
        android:id="@+id/txt_notification_Shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line3"
        android:padding="@dimen/_20sdp"
        android:background="@color/colorf7f7f7"
        android:drawablePadding="@dimen/_10sdp"
        android:text="@string/txt_tag_top_shop"
        fontPath="fonts/Poppins-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:textStyle="bold"
        android:textColor="@color/colordarkGray"
        android:textSize="@dimen/_11sdp" />


    <TextView
        android:id="@+id/txtShopData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_notification_Shop"
        android:layout_alignEnd="@+id/tb_Private"
        android:layout_alignRight="@+id/tb_Private"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        fontPath="fonts/Poppins-Medium.ttf"
        tools:ignore="MissingPrefix"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableRight="@drawable/ic_chevron_right_red"
        android:text="Public"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_11sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colordddddd"
        android:layout_below="@id/txt_notification_Shop"/>

    <ProgressBar
        android:id="@+id/progreessbar"
        style="@style/progressbar"
        tools:visibility="visible" />

    <include
        layout="@layout/item_floating_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
