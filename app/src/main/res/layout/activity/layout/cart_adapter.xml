<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorf7f7f7">

    <TextView
        android:id="@+id/txt_seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="left"
        android:paddingTop="@dimen/_8sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textAllCaps="true"
        android:textColor="@color/color8c8c8c"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hey" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_seller_name" />

        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="left"
            app:layout_constraintTop_toTopOf="@+id/img_preview"
            android:visibility="visible"
            android:src="@drawable/ico_cart_preview_close"/>

    <TextView
        android:id="@+id/txt_quntity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/drawable_sq_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingLeft="@dimen/_9sdp"
        android:paddingRight="@dimen/_9sdp"
        android:paddingTop="@dimen/_8sdp"
        android:text="1"
        android:textColor="@color/colorfb4a4c"
        android:textSize="7sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_preview" />

    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:gravity="center"
        android:text="Watch"
        android:textSize="@dimen/_10sdp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/txt_quntity"
        app:layout_constraintLeft_toRightOf="@+id/txt_quntity"
        app:layout_constraintTop_toTopOf="@+id/txt_quntity" />

    <TextView
        android:id="@+id/txt_save_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:background="@color/colorfb4a4c"
        android:gravity="center"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="Save"
        app:layout_constraintTop_toTopOf="@+id/txt_quntity"
        app:layout_constraintBottom_toBottomOf="@+id/txt_quntity"
        android:textSize="@dimen/_10sdp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>