                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:text="Nov"
                            android:textColor="@color/colorGray" />


                        <View
                            android:id="@+id/view_Nov"
                            android:layout_width="match_parent"
