                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/tw__composer_blue"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txtDec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:text="Dec"
                            android:textColor="@color/colorGray" />


                        <View
                            android:id="@+id/view_Dec"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/tw__composer_blue"
                            android:visibility="invisible" />

                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_Month"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/hs_months"
                tools:listitem="@layout/wallet_item_recycler" />

            <ProgressBar
                android:id="@+id/progreessbar"
                style="@style/progressbar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>


    </LinearLayout>


    <include
        layout="@layout/item_floating_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
