<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_login_bg"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/lnr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_back"
            fontPath="fonts/Poppins-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/txt_back"
            android:textColor="@color/colorfb4a4c"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/title_login"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_login_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tv_signin"
            fontPath="fonts/Poppins-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_done"
            android:textColor="@color/color8c8c8c"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_welcome_back"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_title"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:text="@string/txt_welcome_back"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/txt_signin"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_welcome_back"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:text="@string/txt_signin_account"
        android:textColor="@color/color8c8c8c"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix" />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_user_name"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signin"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:backgroundTint="@color/color979797"
        android:hint="Email Address Or UserName"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@color/color8c8c8c"
        android:textColorHint="@color/color979797"
        android:textSize="@dimen/_11sdp"
        tools:ignore="MissingPrefix" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_password"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_name"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:backgroundTint="@color/color979797"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/_13sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@color/color8c8c8c"
        android:textColorHint="@color/color979797"
        android:textSize="@dimen/_11sdp"
        tools:ignore="MissingPrefix" />

    <LinearLayout
        android:id="@+id/linear_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_forgot_password"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frame_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/frame_twitter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/frame_insta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/insta" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_forgot_password"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/txt_forgot_password"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix" />

    <!--<TextView
        android:id="@+id/tv_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@color/colorRed"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="@string/txt_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_16sdp" />-->

    <ProgressBar
        android:id="@+id/progreessbar"
        style="@style/progressbar"
        tools:visibility="visible" />

</RelativeLayout>