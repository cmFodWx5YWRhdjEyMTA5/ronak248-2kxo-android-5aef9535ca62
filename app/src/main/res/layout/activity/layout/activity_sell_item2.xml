<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.screamxo.Activity.RahulWork.SellItemActivity">

    <include layout="@layout/customtoolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_Bottom"
        android:layout_marginBottom="@dimen/_5sdp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@+id/rl_Header"
        android:background="@drawable/drawable_gray_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/rl_Header"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_19sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:alpha=".8"/>

        <TextView
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:alpha=".8"
            android:layout_marginLeft="@dimen/_11sdp"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_width="31dp"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/_3sdp"
            android:alpha=".8"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:alpha=".7"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_width="28dp"
            android:layout_height="1dp"
            android:alpha=".8"/>

        <TextView
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:alpha=".8"
            android:layout_marginRight="@dimen/_7sdp"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_width="27dp"
            android:layout_height="1dp"
            android:alpha=".8"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@color/colorRed"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_Header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@color/colorRed"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgone"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_red_circle_selector" />

            <TextView
                android:id="@+id/txtPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="PHOTO"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorRed"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ico_more"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgtwo"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_gray_circle_selector"/>

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="DETAILS"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorGray"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ico_more"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgthree"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_gray_circle_selector" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="PRICE"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorGray"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ico_more"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgfour"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_gray_circle_selector"/>

            <TextView
                android:id="@+id/txtFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="FINISH"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorGray"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <include
        layout="@layout/item_floating_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
