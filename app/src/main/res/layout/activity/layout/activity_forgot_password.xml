<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_login_bg"
    android:orientation="vertical"
    tools:context="com.screamxo.Activity.ForgotPasswordActivity">

    <LinearLayout
        android:id="@+id/lnr_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img_toolbar_left_icon"
            fontPath="fonts/Poppins-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/txt_back"
            android:textColor="@color/colorfb4a4c"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/title_login"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title_forgot_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/btn_send_email"
            fontPath="fonts/Poppins-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="BtnsendEmailClick"
            android:text="@string/btn_send_email"
            android:textColor="@color/color8c8c8c"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ico_2kxo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnr_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="gone"
        android:src="@drawable/ico_2kxo_white"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ico_2kxo"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:gravity="center"
        fontPath="fonts/Poppins-Medium.ttf"
        android:text="@string/txt_send_mail_forgot_password"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/color979797"
        tools:ignore="MissingPrefix" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_forgot"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:textColorHint="@color/color979797"
        android:backgroundTint="@color/color979797"
        android:hint="@string/etd_email"
        android:paddingLeft="@dimen/_10sdp"
        fontPath="fonts/Poppins-Medium.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/color8c8c8c" />

    <ProgressBar
        android:id="@+id/progreessbar"
        style="@style/progressbar" />
</RelativeLayout>
