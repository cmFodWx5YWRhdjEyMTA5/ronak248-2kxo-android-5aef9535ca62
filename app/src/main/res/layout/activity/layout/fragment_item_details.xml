<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.screamxo.Fragment.ItemDetails">

    <ImageView
        android:id="@+id/ico_back"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_16sdp"
        android:src="@drawable/ico_back" />

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp" />

    <Button
        android:id="@+id/btnReview"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@null"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Reviews"
        android:textAllCaps="false"
        android:textColor="@color/colorfb4a4c"
        android:textSize="@dimen/_11sdp"
        tools:ignore="MissingPrefix" />

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtBuy"
        android:layout_below="@+id/btnReview">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp" />

                    <LinearLayout
                        android:id="@+id/lnr_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_below="@+id/view_pager"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_Bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lnr_image"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/ll_BottomSheet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:background="@android:color/white">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:alpha=".8"
                                        android:background="@drawable/rect_gray_border"
                                        android:gravity="center"
                                        android:text="Condition"
                                        android:textAllCaps="true"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_8sdp" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5.7"
                                    android:background="@drawable/rect_gray_border">

                                    <TextView
                                        android:id="@+id/txtConditionData"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:gravity="center_vertical"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_8sdp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:background="@drawable/rect_gray_border">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:alpha=".8"
                                        android:gravity="center"
                                        android:text="Shipping"
                                        android:textAllCaps="true"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_9sdp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5.7"
                                    android:background="@drawable/rect_gray_border">

                                    <TextView
                                        android:id="@+id/txtShippingData"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:gravity="center_vertical"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_8sdp" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:background="@drawable/rect_gray_border">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Location"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_9sdp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5.7"
                                    android:background="@drawable/rect_gray_border">

                                    <TextView
                                        android:id="@+id/txtLocationData"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:gravity="center_vertical"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_8sdp" />
                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_BottomSheet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/rl_Reviews"
                        android:layout_below="@+id/ll_Bottom"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <!--<ImageView-->
                        <FrameLayout
                            android:id="@+id/user_image_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img_profile"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_2sdp"
                                android:scaleType="centerCrop"
                                tools:src="@mipmap/user" />

                            <ImageView
                                android:id="@+id/imgBookmark"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="bottom|end"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:src="@mipmap/bookmark"
                                android:visibility="gone"
                                tools:visibility="gone" />

                        </FrameLayout>
                        <!-- <ImageView
          android:id="@+id/img_profile"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_margin="@dimen/_5sdp"
-                            android:src="@mipmap/user" />
+                            android:src="@mipmap/user" />-->


                        <TextView
                            android:id="@+id/txtPrice"
                            fontPath="fonts/Poppins-SemiBold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="$12"
                            android:textColor="@color/colorfb4a4c"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/txtDate"
                            fontPath="fonts/Poppins-SemiBold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtPrice"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:textColor="@color/color8c8c8c"
                            android:textSize="@dimen/_8sdp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/txtName"
                            fontPath="fonts/Poppins-SemiBold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/user_image_container"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_toLeftOf="@+id/txtDate"
                            android:layout_toRightOf="@+id/user_image_container"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/txtDesc"
                            fontPath="fonts/Poppins-SemiBold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtName"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/user_image_container"
                            android:text="czfsdfsdfs"
                            android:textColor="@color/color8c8c8c"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="MissingPrefix" />

                        <com.screamxo.Emoji.CustomText
                            android:id="@+id/txtDescription"
                            fontPath="fonts/Poppins-Light.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/user_image_container"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            tools:ignore="MissingPrefix"
                            tools:visibility="visible" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_Reviews"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/round_corner_rect_review_gray"
                        android:elevation="@dimen/_10sdp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_180sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/round_corner_rect_review_white"
                            android:elevation="@dimen/_10sdp"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/rl_Close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_17sdp"
                                android:layout_marginTop="@dimen/_18sdp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:drawableLeft="@drawable/cross_cart"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <TextView
                                fontPath="fonts/Poppins-Medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/rl_Close"
                                android:layout_toRightOf="@+id/rl_Close"
                                android:gravity="center"
                                android:paddingRight="@dimen/_17sdp"
                                android:text="Reviews"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:ignore="MissingPrefix" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rc_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/rl_Close"
                                android:layout_margin="@dimen/_10sdp" />
                            <!--
                            fix  Issue_089 replacing this recycler:FIXED
                             <android.support.v7.widget.RecyclerView
                                android:id="@+id/rc_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/rl_Close"
                                android:layout_margin="@dimen/_10sdp" />

-->

                            <TextView
                                android:id="@+id/txt_no_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="No review yet.."
                                android:textColor="@color/color8c8c8c"
                                android:textSize="@dimen/_14sdp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/progreessbar"
                                style="@style/progressbar" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_purchase_data"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_180sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:background="#cc686464"
                            android:elevation="@dimen/_4sdp"
                            android:visibility="gone"
                            tools:targetApi="lollipop"
                            tools:visibility="gone">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_purchase_data"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@+id/rl_purchase_data_close" />

                            <RelativeLayout
                                android:id="@+id/rl_purchase_data_close"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:drawableLeft="@mipmap/cross_out_mark_2_"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:text="Close"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_message_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <!--Header-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorLightGray"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_topics"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:text="Topics"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_questions"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:text="Questions"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <!--Topics-->
                            <LinearLayout
                                android:id="@+id/ll_topics_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone"
                                tools:visibility="visible">


                                <TextView
                                    android:id="@+id/tv_topics_condition"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Condition"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_topics_payment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Payment"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_topics_policy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Policy"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_topics_shipping"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Shipping"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_topics_others"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/bg_triangle_middle_gray"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Other"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <!--Questions-->
                            <LinearLayout
                                android:id="@+id/ll_questions_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="gone"
                                tools:visibility="visible">


                                <TextView
                                    android:id="@+id/tv_questions_original_manufacturer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Original Manufacturer?"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_questions_negotiable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Negotiable?"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_questions_ship_internationally"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Do you ship internationally?"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_questions_return_policy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="What is your return policy?"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_questions_accepted_payment_form"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Accepted forms of payment?"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_questions_need_asap"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/edit_box_back"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Need This ASAP!"
                                    android:textColor="@color/tw__composer_red"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_questions_other"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@drawable/bg_triangle_middle_gray"
                                    android:gravity="center"
                                    android:padding="@dimen/_8sdp"
                                    android:text="Other"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>
                </ScrollView>

                <RelativeLayout
                    android:id="@+id/rl_Bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/user_image_container1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/user_iv"
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="centerCrop"
