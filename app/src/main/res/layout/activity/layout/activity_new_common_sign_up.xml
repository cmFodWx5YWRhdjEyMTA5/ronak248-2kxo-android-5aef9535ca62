<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_login_bg"
    tools:context=".Activity.NewCommonSignUpActivity">

    <TextView
        android:id="@+id/title_signup"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="@dimen/_18sdp"
        android:drawableLeft="@mipmap/ico_back"
        android:drawablePadding="@dimen/_30sdp"
        android:drawableTint="@android:color/white"
        android:gravity="center_vertical"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14sdp" />

    <ImageView
        android:id="@+id/ico_2kxo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/title_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:src="@drawable/ico_2kxo_white"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_options"
        android:layout_marginBottom="@dimen/_7sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/txt_signup_with"
            android:textColor="@android:color/white"
            android:letterSpacing=".09"
            android:textSize="@dimen/_9sdp"
            fontPath="fonts/Poppins-Bold.ttf"
            tools:ignore="MissingPrefix"
            tools:targetApi="lollipop" />

        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/frame_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/mail" />

        <ImageView
            android:id="@+id/frame_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/frame_twitter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/frame_insta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/insta" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progreessbar"
        style="@style/progressbar"
        tools:visibility="visible" />

</RelativeLayout>