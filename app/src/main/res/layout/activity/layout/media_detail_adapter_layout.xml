<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray">

    <LinearLayout
        android:id="@+id/lny_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lny_container"
        android:background="@android:color/white"
        android:padding="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/ico_xo_like_copy"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/txt_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/ico_comment"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/ico_more"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</RelativeLayout>