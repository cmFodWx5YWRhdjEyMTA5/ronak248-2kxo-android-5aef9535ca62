<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf7f7f7"
    tools:context="com.screamxo.Activity.RahulWork.RecorderTagActivity">

    <RelativeLayout
        android:id="@+id/rl_Header"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:src="@drawable/cross_cart" />

        <ImageView
            android:id="@+id/img_waves"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_toLeftOf="@+id/imgTick"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ico_waveform"
            android:layout_toRightOf="@+id/imgCancel" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone"
            android:text="Edit Photo"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/imgTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:src="@drawable/ico_tick_black" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_Header"
        android:background="#c5c5c5" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_above="@+id/caption_et"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imgRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:src="@drawable/ico_edit_photo" />

        <ImageView
            android:id="@+id/img_custom_photo"
            android:layout_width="@dimen/_128sdp"
            android:layout_height="@dimen/_112sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_65sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Add Photo"
            android:textColor="@android:color/black" />

    </FrameLayout>

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/transparentlayout"
        android:hint="Title"
        android:padding="@dimen/_2sdp"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/caption_et"
        android:background="#c5c5c5"/>

    <EditText
        android:id="@+id/caption_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="Write a caption..."
        android:textColorHint="@color/color8c8c8c"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:inputType="textMultiLine"
        android:padding="@dimen/_20sdp"
        android:textSize="@dimen/_10sdp" />

    <ProgressBar
        android:id="@+id/progreessbar"
        style="@style/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <include
        layout="@layout/item_floating_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

