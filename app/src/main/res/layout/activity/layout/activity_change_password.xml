<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_gray_gradient"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.screamxo.Activity.ChangePasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <EditText
        android:id="@+id/edt_old_password"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@drawable/rect_gray_border"
        android:hint="@string/edt_old_password"
        android:inputType="textPassword"
        android:padding="@dimen/_15sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/edt_new_password"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_old_password"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rect_gray_border"
        android:hint="@string/edt_new_password"
        android:inputType="textPassword"
        android:padding="@dimen/_15sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/edt_confirm_password"
        style="@style/EditTextStyle"
        fontPath="fonts/Poppins-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_new_password"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rect_gray_border"
        android:hint="@string/edt_confirm_password"
        android:inputType="textPassword"
        android:padding="@dimen/_15sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btn_update"
        fontPath="fonts/Poppins-SemiBold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@color/colorRed"
        android:stateListAnimator="@drawable/customized_state_animator"
        android:text="@string/btn_update"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        tools:ignore="MissingPrefix"
        tools:targetApi="lollipop" />

    <ProgressBar
        android:id="@+id/progreessbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <include
        layout="@layout/item_floating_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
