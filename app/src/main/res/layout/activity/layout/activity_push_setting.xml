<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.screamxo.Activity.RahulWork.PushSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/tool_bar" />

        <TextView
            android:id="@+id/txt_notification_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:background="@drawable/drawable_gray_gradient"
            android:drawableLeft="@drawable/ico_bell_new"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/setting_notification"
            android:textStyle="bold"
            fontPath="fonts/Poppins-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="@color/colordarkGray"
            android:textSize="@dimen/_10sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colordddddd"/>

        <RadioGroup
            android:id="@+id/rb_groupNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorf7f7f7"
            android:padding="@dimen/_20sdp">

            <RadioButton
                android:id="@+id/rb_MyFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector_seting"
                android:checked="false"
                android:layoutDirection="rtl"
                android:text="@string/txt_my_friend"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:checked="true"
                fontPath="fonts/Poppins-Medium.ttf"
                tools:ignore="MissingPrefix"
                tools:targetApi="jelly_bean_mr1" />

            <RadioButton
                android:id="@+id/rb_EveryOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_20sdp"
                android:button="@drawable/radio_selector_seting"
                android:checked="false"
                android:layoutDirection="rtl"
                android:text="@string/txt_everyone"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                fontPath="fonts/Poppins-Medium.ttf"
                tools:ignore="MissingPrefix"
                tools:targetApi="jelly_bean_mr1" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colordddddd"/>

        <TextView
            android:id="@+id/txt_notification_Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:drawableLeft="@drawable/ico_bell_new"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/txt_comment_notification"
            android:textStyle="bold"
            fontPath="fonts/Poppins-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="@color/colordarkGray"
            android:textSize="@dimen/_11sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colordddddd"/>

        <RadioGroup
            android:id="@+id/rb_groupComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorf7f7f7"
            android:padding="@dimen/_20sdp">

            <RadioButton
                android:id="@+id/rb_CommentFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector_seting"
                android:checked="false"
                android:layoutDirection="rtl"
                android:text="@string/txt_my_friend"
                android:textAlignment="textStart"
                android:textStyle="bold"
                fontPath="fonts/Poppins-Medium.ttf"
                tools:ignore="MissingPrefix"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="jelly_bean_mr1" />

            <RadioButton
                android:id="@+id/rb_CommentOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_20sdp"
                android:button="@drawable/radio_selector_seting"
                android:checked="false"
                fontPath="fonts/Poppins-Medium.ttf"
                tools:ignore="MissingPrefix"
                android:layoutDirection="rtl"
                android:text="@string/txt_everyone"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="jelly_bean_mr1" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colordddddd"/>

        <TextView
            android:id="@+id/txt_notification_Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:drawableLeft="@drawable/ico_bell_new"
            android:drawablePadding="@dimen/_10sdp"
            android:textStyle="bold"
            android:text="@string/txt_contact_notification"
            fontPath="fonts/Poppins-SemiBold.ttf"
            tools:ignore="MissingPrefix"
            android:textColor="@color/colordarkGray"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colordddddd"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorf7f7f7">
            <CheckBox
                android:id="@+id/cb_Contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:button="@drawable/radio_selector_seting"
                android:checked="false"
                android:layoutDirection="rtl"
                android:text="@string/txt_new_contact"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                fontPath="fonts/Poppins-Medium.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="jelly_bean_mr1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colordddddd"/>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include
            layout="@layout/item_floating_btn"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progreessbar"
        style="@style/progressbar"
        tools:visibility="visible" />
</RelativeLayout>
