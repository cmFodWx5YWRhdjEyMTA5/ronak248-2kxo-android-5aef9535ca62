<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activity.RahulWork.PostCongActivity">

    <ImageView
        android:id="@+id/ico_back"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:padding="@dimen/_14sdp"
        android:src="@drawable/ico_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="Sell Item"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@+id/ico_back"
        android:background="@drawable/drawable_gray_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_below="@+id/ico_back"
        android:layout_marginTop="@dimen/_19sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:alpha=".8"
            android:background="@color/colorRed" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="1dp"
            android:alpha=".8" />

        <TextView
            android:layout_width="54dp"
            android:layout_height="1dp"
            android:alpha=".8"
            android:background="@color/colorRed" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:alpha=".8" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:alpha=".7"
            android:background="@color/colorRed" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:alpha=".8" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:alpha=".8"
            android:background="@color/colorRed" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:alpha=".8" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="1dp"
            android:alpha=".8"
            android:background="@color/colorRed" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ico_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:alpha=".8"
            android:background="@color/colorRed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgone"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_gray_circle_selector" />

            <TextView
                android:id="@+id/txtPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="PHOTO"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ico_more"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgtwo"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_gray_circle_selector" />

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="DETAILS"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ico_more"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgthree"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_gray_circle_selector" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="PRICE"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/ico_more"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgfour"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                app:srcCompat="@drawable/vect_red_circle_selector" />

            <TextView
                android:id="@+id/txtFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="FINISH"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtCongrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_Bottom"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:text="CONGRATULATIONS"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txtTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCongrats"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:text="The smartest billionares I know never graduated high school"
        android:textColor="@color/colordarkGray"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/item_name_tv"
        android:layout_below="@+id/txtTag"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/img_placeholder" />

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_footer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="center"
        android:visibility="gone"
        tools:text="Some text here" />


    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDone"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="-10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBoostAnother"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_red"
            android:gravity="center"
            android:onClick="funAnother"
            android:padding="@dimen/_12sdp"
            android:text="Post Another"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txtShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_red"
            android:gravity="center"
            android:onClick="boostItem"
            android:padding="@dimen/_12sdp"
            android:text="Share"
            android:textColor="@color/colorPink"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@color/colorRed"
        android:onClick="funDone"
        android:stateListAnimator="@drawable/customized_state_animator"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        tools:targetApi="lollipop" />

    <include
        layout="@layout/item_floating_btn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
