<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_first_child"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_8sdp"
    android:paddingTop="@dimen/_15sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_10sdp">

    <TextView
        android:id="@+id/txt_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="view more Comments"
        android:textColor="@color/colorBlue"
        android:textStyle="italic"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_user_profile"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@mipmap/user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_toRightOf="@+id/img_user_profile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color8c8c8c"
            android:text="58 minutes ago"
            android:textStyle="bold"
            android:textSize="@dimen/_8sdp" />

        <com.screamxo.Emoji.CustomText
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:textSize="11sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/_7sdp"
            android:alpha=".8"
            android:layout_height="wrap_content"
            android:text="Hello text" />

    </LinearLayout>

</RelativeLayout>
