<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@mipmap/ic_user"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:layout_alignTop="@+id/img_item"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="username"
        android:textAllCaps="true"
        android:layout_toRightOf="@+id/img_item"
        android:layout_toEndOf="@+id/img_item"
        android:layout_marginTop="@dimen/_5sdp" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/color8c8c8c"
        android:textStyle="bold"
        android:text=" "
        android:layout_toRightOf="@+id/img_item"
        android:layout_below="@+id/txt_name"
        android:layout_marginRight="@dimen/_10sdp"
        tools:text="November 15 at 4:L52AM" />

    <com.screamxo.Emoji.CustomText
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/img_item"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="address"
        android:alpha=".9"
        android:textSize="@dimen/_11sdp"
        android:layout_below="@+id/txtTime"/>


</RelativeLayout>