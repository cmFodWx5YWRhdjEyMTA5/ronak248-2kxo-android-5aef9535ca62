<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_15sdp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card_purchase"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingTop="@dimen/_12sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_78sdp"
            android:layout_marginBottom="@dimen/_19sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ico_img_new_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_purchased_item_name"
            fontPath="fonts/Poppins-Medium.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toRightOf="@+id/img_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_item"
            tools:ignore="MissingPrefix"
            tools:text="sfsdgsdasfegegesfsf" />

        <TextView
            android:id="@+id/txt_purchased_item_price"
            fontPath="fonts/Poppins-Medium.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintLeft_toRightOf="@+id/img_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_purchased_item_name"
            tools:ignore="MissingPrefix"
            tools:text="2356788" />

        <TextView
            android:id="@+id/txt_purchased_date"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textColor="@color/color8c8c8c"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/img_item"
            app:layout_constraintLeft_toRightOf="@+id/img_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_purchased_item_price"
            tools:ignore="MissingPrefix"
            tools:text="asgegesehgsehgsehsh" />

        <TextView
            android:id="@+id/txt_req_Tracking"
            fontPath="fonts/Poppins-SemiBold.ttf"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPink"
            android:gravity="center"
            android:inputType="text"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="Request Tracking"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txt_purchased_item_name"
            tools:ignore="MissingPrefix" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txt_add_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_round_corner_red"
        android:text="@string/txt_add_review"
        android:gravity="center"
        android:textAllCaps="true"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingLeft="@dimen/_25sdp"
        android:paddingRight="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="@+id/card_purchase"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_purchase"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        fontPath="fonts/Poppins-SemiBold.ttf"
        tools:ignore="MissingPrefix"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_add_Tracking"
        fontPath="fonts/Poppins-SemiBold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_round_corner_red"
        android:gravity="center"
        android:inputType="text"
        android:textAllCaps="true"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingTop="@dimen/_4sdp"
        android:text="View Tracking"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_9sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/card_purchase"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintRight_toLeftOf="@+id/txt_add_review"
        app:layout_constraintTop_toBottomOf="@+id/card_purchase"
        tools:ignore="MissingPrefix" />

</android.support.constraint.ConstraintLayout>