<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@drawable/drawable_gray_gradient"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingTop="@dimen/_8sdp">

    <ImageView
        android:id="@+id/iv_card_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:padding="@dimen/_4sdp"
        tools:src="@drawable/ic_visa" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_card_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@+id/txt_card_name"
            android:textColor="@android:color/black"
            tools:text="****0748" />

        <TextView
            android:id="@+id/tv_exp_mon_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:text="08/22" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp"
            tools:text="134-11 Rockaway Blvd S Ozone Park NY 11420" />

    </RelativeLayout>
</RelativeLayout>
