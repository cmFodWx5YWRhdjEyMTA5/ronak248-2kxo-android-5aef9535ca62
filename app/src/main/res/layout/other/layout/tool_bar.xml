<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="txt_toolbar_title" />

        <ImageView
            android:id="@+id/img_toolbar_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:paddingBottom="@dimen/_16sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_16sdp"
            android:src="@drawable/ico_back" />


        <EditText
            android:id="@+id/toolbar_edt_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:background="@null"
            android:layout_toLeftOf="@+id/lny_image"
            android:layout_toRightOf="@+id/img_toolbar_left_icon"
            android:drawableLeft="@drawable/ico_search_new"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Search"
            android:padding="@dimen/_3sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/lny_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@mipmap/filterred"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@mipmap/arrow"
                android:visibility="gone"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/img_toolbar_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerInside"
                android:src="@mipmap/add"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
