<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/background_dark</item>
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="RedHeaderTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/background_dark</item>
    </style>

    <style name="RedHeaderThemeCart" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/background_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemecustom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colordarkPink</item>
        <item name="colorAccent">@android:color/background_dark</item>

    </style>

    <style name="AppThemeblack" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@android:color/background_dark</item>

    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">7</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TabLayoutTextStyleNew">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edit_box_back</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_login_sign_et</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:layout_marginRight">@dimen/_16sdp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:drawableTint" tools:ignore="NewApi">#ff696b</item>
    </style>


    <style name="SignUpEditTextStyle">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_login_sign_et</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/_16sdp</item>
        <item name="android:layout_marginRight">@dimen/_16sdp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:drawableTint" tools:ignore="NewApi">#ff696b</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/colordarkGray</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="progressbar">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="DialogAnimationUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_up_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_down_from_position</item>
    </style>


    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NumberTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/colorf7f7f7</item>
        <item name="android:shadowDx">5</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:backgroundTint">@color/colorf7f7f7</item>
        <item name="android:background">@drawable/ico_round_profile</item>
    </style>

    <style name="ChatBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/ico_chat_bg</item>
    </style>

</resources>
